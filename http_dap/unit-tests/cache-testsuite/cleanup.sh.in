#!/bin/sh
#
# Reset the environment for the HTTPCacheTests

# sometimes have trouble deleting http_cache_test during distcheck
if [ -d http_cache_test ]
then
    chmod -R +w http_cache_test
fi

# remove generated cache directories
rm -rf gc_cache
rm -rf purge_cache
rm -rf header_cache
rm -rf singleton_cache
rm -rf http_cache_test

# initialize the http_cache_test directory
cp -r @srcdir@/dods_cache_init http_cache_test

# make sure we can write to the directory and sub directories
chmod -R +w http_cache_test

